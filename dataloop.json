{
  "displayName": "Anonymization Tools",
  "name": "anonymization-tools",
  "description": "Takes an item, a model, and a list of labels. Calls the model predict and blurs objects with the listed labels",
  "version": "0.1.3",
  "scope": "public",
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/anonymizer.git",
    "gitTag": "0.1.3"
  },
  "attributes": {
    "Provider": "Dataloop",
    "Category": "Application",
    "Deployed By": "Dataloop",
    "Media Type": ["Image"],
    "Application Type": [
      "Pipeline Node"
    ]
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "anonymizer-service.anonymizer-module.anonymize"
        },
        "name": "Anonymize",
        "categories": [
          "image-utils"
        ],
        "displayName": "Anonymize",
        "description": "Blurs objects of the specified labels detected by the specified models in the input image.",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Anonymize",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "model_ids",
              "title": "Model ID(s)",
              "props": {
                "title": true,
                "type": "string",
                "default": "model_1, model_2",
                "required": false,
                "placeholder": "Models to anonymize (leave empty to include all models)"
              },
              "widget": "dl-input"
            },
            {
              "name": "labels",
              "title": "Label(s)",
              "props": {
                "title": true,
                "type": "string",
                "required": false,
                "default": "label_1, label_2",
                "placeholder": "Labels to anonymize (leave empty to include all labels)"
              },
              "widget": "dl-input"
            },
            {
              "name": "blur",
              "title": "Blur or Fill the annotation?",
              "props": {
                "title": true,
                "type": "string",
                "default": true,
                "required": true,

                "rules": [
                  {
                    "type": "required",
                    "effect": "error"
                  }
                ],
                "options": [
                  {
                    "value": "blur",
                    "label": "Blur"
                  },
                  {
                    "value": "fill",
                    "label": "Fill"
                  }
                ]
              },
              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "blur_intensity",
              "title": "Blur Intensity",
              "props": {
                "title": true,
                "type": "number",
                "default": 25,
                "max": 100,
                "min": 0,
                "step": 1,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            },
            {
              "name": "anonymization_type",
              "title": "Remove, Replace, or Keep input image?",
              "props": {
                "title": true,
                "type": "string",
                "default": "keep",
                "required": false,
                "options": [
                  {
                    "value": "remove",
                    "label": "Remove"
                  },
                  {
                    "value": "replace",
                    "label": "Replace"
                  },
                  {
                    "value": "keep",
                    "label": "Keep"
                  }
                ]
              },
              "rules": [],
              "widget": "dl-select"
            },
            {
              "name": "directory",
              "title": "Save directory",
              "props": {
                "title": true,
                "type": "string",
                "required": true,
                "default": "/blurred"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "anonymizer-module",
        "entryPoint": "anonymizer.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "anonymize",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "blurred_item"
              }
            ],
            "displayIcon": "icon-dl-governance-filled"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "anonymizer-service",
        "moduleName": "anonymizer-module",
        "initParams": {},
        "secrets": [],
        "runtime": {
          "podType": "regular-l",
          "runnerImage": "dataloopai/dtlpy-agent:cpu.py3.10.opencv",
          "numReplicas": 1,
          "concurrency": 1,
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false
        },
        "operation": "none"
      }
    ]
  }
}